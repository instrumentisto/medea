root = true

[*]
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 80

[*.md]
indent_style = space
indent_size = 4
trim_trailing_whitespace = false
max_line_length = off

[*.rs]
indent_style = space
indent_size = 4

[*.js]
indent_style = space
indent_size = 2

[*.html]
indent_style = space
indent_size = 2

[*.toml]
indent_style = space
indent_size = 4

[*.{json,yaml,yml}]
indent_style = space
indent_size = 2

[*.proto]
indent_style = space
indent_size = 2

[Makefile]
indent_style = tab
indent_size = 4

[Dockerfile]
indent_style = space
indent_size = 4

[hooks/*]
indent_style = space
indent_size = 2

[**/nginx{/*,.*}.conf]
indent_style = space
indent_size = 2
